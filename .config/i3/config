bindsym $mod+Shift+0 move container to workspace 10

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        position top

        status_command i3status | $HOME/.config/i3status/wrapper.py
}

new_window normal 1
new_float normal 1

for_window [class="(?i)urxvt"] border pixel 1

# Color scheme
# class                 border  bg      text    indicator child_border
client.focused          #00FF00 #000000 #00FF00 #00FF00   #00FF00
client.focused_inactive #000000 #000000 #00FF00 #000000   #000000
client.unfocused        #000000 #000000 #00FF00 #000000   #000000
client.urgent           #00FF00 #FF0000 #000000 #FF0000   #FF0000
client.placeholder      #0000FF #000000 #0000FF #0000FF   #0000FF
client.background #000000

# System control
set $mode_system system: (c)reload config (e)exit i3 (l)lock (p)poweroff (r)restart i3
mode "$mode_system" {
    bindsym c reload, mode "default"
    bindsym e exit
    bindsym l exec --no-startup-id sudo chvt 1 && physlock && sudo chvt 7, mode "default"
    bindsym p exec sudo poweroff
    bindsym r restart, mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+x mode "$mode_system"

# Volume control
bindsym $mod+F1 exec amixer sset Master toggle && killall -USR1 i3status
bindsym $mod+F2 exec amixer sset Master 5%- && killall -USR1 i3status
bindsym $mod+F3 exec amixer sset Master 5%+ && killall -USR1 i3status
bindsym $mod+Shift+F2 exec amixer sset Master 1- && killall -USR1 i3status
bindsym $mod+Shift+F3 exec amixer sset Master 1+ && killall -USR1 i3status
